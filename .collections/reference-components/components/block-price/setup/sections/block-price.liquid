{%- liquid
  for block in section.blocks
    case block.type
      when 'price'
        render 'block-price', block: block
    endcase
  endfor
-%}

{% schema %}
{
  "name": "t:labels.product",
  "settings": [],
  "blocks": [
    {
      "type": "price",
      "name": "t:labels.price",
      "limit": 1
    }
  ]
}
{% endschema %}
