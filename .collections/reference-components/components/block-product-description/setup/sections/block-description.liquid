{%- liquid
  for block in section.blocks
    case block.type
      when 'description'
        render 'block-product-description', block: block
    endcase
  endfor
-%}

{% schema %}
{
  "name": "t:labels.product",
  "settings": [],
  "blocks": [
    {
      "type": "description",
      "name": "t:labels.description",
      "settings": []
    }
  ]
}
{% endschema %}
